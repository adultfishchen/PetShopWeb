<%- include ('../partials/header') -%>

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To PetShop!</h1>
             <p>View our hand-picked pets from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/petshops/new">Add New Petshop</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% petshops.forEach(function(petshop){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= petshop.image %>">
                   <div class="caption">
                       <h4><%= petshop.name %></h4>
                   </div>
                   <p>
                       <a href="/petshops/<%= petshop._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<%- include ('../partials/footer') -%>